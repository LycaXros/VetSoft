@model IPagedList<VetSoft.Presentation.Models.PacienteViewModel>
@using VetSoft.Presentation.Helpers


<div id="listaPacientes">
    @if (Model.Count() <= 0)
    {
        <h3 class="text-center">No existe Contenido que Mostrar</h3>
    }
    else
    {
        @Html.PacienteCuadros(Model)
        <div id="pagedList" data-otf-target="#listaPacientes">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
             new PagedListRenderOptions()
             {
                 Display = PagedListDisplayMode.IfNeeded,
                 DisplayPageCountAndCurrentLocation = true,
                 
             });
        </div>
    }
</div>
