<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - VetSoft</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-expand-md bg-dark navbar-dark @*fixed-top*@">
        <div class="container">
            @Html.ActionLink(User.Identity.Name+": Nombre de aplicación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#menuCollapsed">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="menuCollapsed">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Especies", "", "Especies", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Razas", "", "Razas", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Pacientes", "Index", "Paciente", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Propietarios", "", "Propietarios", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Medicamentos", "", "Medicamentos", new { area = "" }, new { @class = "nav-link" })</li>

                </ul>
                <div>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="container body-content">
        <br />
        @RenderBody()
        <hr />
        <footer class="align-bottom">
            <p>&copy; @DateTime.Now.Year - Vetsoft </p>
        </footer>
    </div>

    <!-- The Modal -->
    <div class="modal" id="modalData" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <br />
                <!-- Modal Header -->
                <div class="modal-header">
                    <button type="button" class="close" onclick="ModalClose()">
                        <span aria-hidden="true"> &times;</span>
                    </button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" onclick="ModalClose()">Close</button>
                </div>

            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/allScripts")
    <script type="text/javascript">
        function ModalClose() {
            $('#modalData').hide();
            $('#modalData .modal-body').html(" ");
        }
    </script>

    @if (!string.IsNullOrEmpty(TempData["msgError"] as string))
    {
        <script type="text/javascript">
        (function () {
            alert("@Html.Raw(TempData["msgError"])");
        })();
        </script>
    }
    @RenderSection("scripts", required: false)
</body>
</html>
