@model IEnumerable<VetSoft.Data.Raza>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especie.Nombre) Especie
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especie.Nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                <a class="btn btn-info" onclick="VerDetalle(@item.ID)">Detalles</a>
                @*@Html.ActionLink("Details", "Details", new { id = item.ID }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>


<!-- The Modal -->
<div class="modal fade in" id="modalDetalles" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <br />
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close" onclick="ModalDetalleClose()">
                    <span aria-hidden="true"> &times;</span>
                </button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">

            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="ModalDetalleClose()">Close</button>
            </div>

        </div>
    </div>
</div>

@section scripts {

    <script>
        function VerDetalle(id) {
        $.get("@Url.Action("Details")/" + id,
            function (data) { $('#modalDetalles .modal-body').html(data); });
        $('#modalDetalles').show();
        }
        function ModalDetalleClose() {
            $('#modalDetalles').hide();
            $('#modalDetalles .modal-body').html(" ");
        }


    </script>
}